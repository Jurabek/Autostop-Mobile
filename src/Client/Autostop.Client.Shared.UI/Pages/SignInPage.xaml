<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autostop.Client.Shared.UI.Pages.SignInPage">
    <ContentPage.Content>
        <Grid>
            <StackLayout x:Name="LoginView" VerticalOptions="Center" Margin="20, 0">
                <Entry Placeholder="Email" Margin="5"/>
                <Button TextColor="White" BackgroundColor="#ab47bc" x:Name="LoginButton" HeightRequest="40" Text="Login" Margin="5" />
            </StackLayout>
            <StackLayout x:Name="ConfirmCodeView" VerticalOptions="Center" Margin="20, 0" IsVisible="False">
                <Entry Placeholder="Code" Margin="5"/>
                <Button TextColor="White" BackgroundColor="#ab47bc" x:Name="Enter" HeightRequest="40" Text="Check code" Margin="5" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>