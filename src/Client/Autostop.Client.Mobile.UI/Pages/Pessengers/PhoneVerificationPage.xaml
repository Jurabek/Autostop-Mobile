<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autostop.Client.Mobile.UI.Pages.Pessengers.PhoneVerificationPage">
    <ContentPage.Content>
        <Grid>
            <StackLayout VerticalOptions="Center">
                <StackLayout Margin="5">
                    <Label FontSize="Large">Verify your number</Label>
                    <Label FontSize="Medium">Enter your country code and phone number for verification</Label>
                </StackLayout>
                <StackLayout Margin="5">
                    <Entry Text="{Binding PhoneNumber}"/>
                </StackLayout>
                <StackLayout Margin="5">
                    <Button Text="Verify phone number"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>